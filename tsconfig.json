{
    "files": [],
    "references": [
        { "path": "./tsconfig.app.json" },
        { "path": "./tsconfig.node.json" }
    ],

    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@src/*": ["src/*"]
        },
        "allowJs": true, 
        "skipLibCheck": true, 
        "declaration": true, // Tạo file .d.ts (nếu cần)
        "declarationMap": true, // Tạo file .d.ts.map để hỗ trợ navigation,
        "noUnusedLocals": false,
        "noUnusedParameters": false
        
    },
}
